<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>Smis.MongoDb.Lib</PackageId>
    <Version>1.0.0</Version>
    <Authors>Mauro Fanton</Authors>
    <Product>Smis MongoDb Library</Product>
    <PackageTags>Smis;Smis.MongoDb.Lib</PackageTags>
    <Description>
      This client library provide a Mongodb connection
    </Description>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="MongoDB.Driver" Version="2.23.1" />
    <PackageReference Include="Microsoft.Extensions.Configuration" Version="8.0.0" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Binder" Version="8.0.0" />
  </ItemGroup>
  <ItemGroup>
    <None Remove="Connection\" />
    <None Remove="Repositories\" />
  </ItemGroup>
  <ItemGroup>
    <Folder Include="Connection\" />
    <Folder Include="Repositories\" />
  </ItemGroup>
</Project>
